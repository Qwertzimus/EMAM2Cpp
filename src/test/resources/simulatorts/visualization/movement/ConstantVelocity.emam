package simulatorts.visualization.movement;

component ConstantVelocity {
	port
		in (0km/h : 250km/h) velocity,
		in (0s : oos) time,
		out (-2 m/s^2 : 2 m/s^2) acceleration;

	implementation Math {

        B cond = time < 1s;

    	if cond
    	    acceleration = 0 m/s^2;

    	else
    	    acceleration = 2 m/s^2;

    	end
    }
}
