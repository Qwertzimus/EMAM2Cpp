package simulator1;

component ConstantVelocity {
	port
		in Q(0km/h : 250km/h) velocity,
		in Q(0s:oos) time,
		out Q(-2m/s^2:2m/s^2) acceleration;

	implementation Math{

		B cond = time < 1s;

    	if (cond)
    	    acceleration = 0m/s^2;
    	else
    	    acceleration = 2m/s^2;
        end
	}
}