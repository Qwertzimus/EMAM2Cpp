package paper;

component MatrixModifier{
    ports in Q(-oo:oo)^{1000,200} mat1,
          in Q(-oo:oo)^{1000,200} mat2,
          in Q(-oo:oo)^{200,10} mat3,
          in Q(-oo:oo)^{10,100} mat4,
          in Q(0:1) factor,
          out Q(-oo:oo)^{1000,100} matOut;


    implementation Math{
        Q^{1000, 200} a = mat1+mat2;
        Q^{200, 100} b = mat3*mat4;
        matOut = (a*b)*factor;
    }

}