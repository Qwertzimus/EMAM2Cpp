package montiarc;

component Constant_velocity {
	port
		in (0km/h : 250km/h) velocity,
		in (0s:1000s) time, // (0s:1ms:00 s)
		out (-2m/s^2:2m/s^2) acceleration,
		out (-180°:180°) steering;

	implementation Math {

	  B cond = time < 1s;

	  acceleration = cond ? 0 m/s^2 : 2 m/s^2;
	  steering = 0°;
	}
}
