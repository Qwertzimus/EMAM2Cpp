package visualization.feature;

component GameOverTrigger {
    port
        in N1 x,
        in N1 y,
        out B status;

    implementation Math {

          // The boundaries of the 3D world
          B aboveBnd = x > 200;
    	  B belowBnd = x < -200;
    	  B rightBnd = y > 150;
          B leftBnd = y < -150;

    	  status = aboveBnd || belowBnd || rightBnd || leftBnd;
    }
}